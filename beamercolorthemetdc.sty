\mode<presentation>

\definecolor{tdcgreen0}{RGB}{0,96,100}
\definecolor{tdcyellow0}{RGB}{223,246,77}
\definecolor{tdcgray}{RGB}{165,165,165}
\definecolor{tdcteal}{RGB}{227,249,237}
\definecolor{tdcgreen1}{RGB}{0,135,141}
\definecolor{tdcyellow1}{RGB}{248,253,219}

\setbeamercolor{structure}{fg=tdcgreen1}

\setbeamercolor{palette primary}{fg=tdcteal,bg=tdcgreen0!70}
\setbeamercolor{palette secondary}{fg=tdcteal,bg=tdcgreen0!80}
\setbeamercolor{palette tertiary}{fg=tdcteal,bg=tdcgreen0!90}
\setbeamercolor{palette quaternary}{fg=white,bg=tdcgreen0}

\setbeamercolor{titlelike}{parent=palette quaternary}

\setbeamercolor{block title}{fg=tdcteal,bg=tdcgreen0}
\setbeamercolor{block title alerted}{use=alerted text,fg=tdcgreen0,bg=alerted text.fg!75!bg}
\setbeamercolor{block title example}{use=example text,fg=tdcgreen0,bg=example text.fg!75!bg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!25!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg}

\setbeamercolor{sidebar}{bg=tdcgreen0!70}

\setbeamercolor{palette sidebar primary}{fg=tdcgreen0}
\setbeamercolor{palette sidebar secondary}{fg=tdcgreen0!75}
\setbeamercolor{palette sidebar tertiary}{fg=tdcgreen0!75}
\setbeamercolor{palette sidebar quaternary}{fg=tdcgreen0}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{page number in head/foot}{parent=structure}

\hypersetup{
  colorlinks,
  linkcolor=,
  urlcolor=tdcgreen1,
  }

\mode
<all>
