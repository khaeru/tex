\ProvidesPackage{beamerthemeCECPPoster}

\mode<presentation>

%% Colors from the Joint Program style guide
\definecolor{pms-201}{cmyk}{0.00, 1.00, 0.63, 0.29} % bold red
\definecolor{pms-282}{cmyk}{1.00, 0.68, 0.00, 0.54} % darkest blue
\definecolor{pms-284}{cmyk}{0.55, 0.26, 0.00, 0.00} % lighter blue
\definecolor{pms-2955}{cmyk}{1.00, 0.64, 0.10, 0.31} % third blue
\definecolor{pms-357}{cmyk}{0.80, 0.00, 1.00, 0.56} % dark green

\setbeamercolor{background canvas}{bg=pms-284!50}

% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=pms-282}
\setbeamercolor{separation line}{bg=pms-357}
\setbeamerfont{headline}{size=\large}
\setbeamerfont{title in headline}{size=\VERYHuge,series=\bfseries}
\setbeamerfont{author in headline}{series=\bfseries}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=pms-282}
\setbeamerfont{footline}{size=\normalsize}

\setbeamertemplate{navigation symbols}{}

% block enviroment
\setbeamercolor{block title}{fg=white,bg=pms-282}
\setbeamercolor{block body}{bg=white}
\setbeamerfont{block title}{size=\large,series=\bfseries}
\setbeamercolor{block title alerted}{fg=white,bg=pms-201}
\setbeamercolor{block body alerted}{bg=white}
\addtobeamertemplate{block end}{}{\vspace*{1cm}}
\addtobeamertemplate{block alerted end}{}{\vspace*{1cm}}


% structure text
\setbeamercolor{structure}{fg=pms-282}
\setbeamerfont{structure}{size=\large}
\setbeamertemplate{structure end}{\color{fg}\hrule}

\setbeamertemplate{headline}{
\leavevmode

\begin{beamercolorbox}[wd=\paperwidth]{headline}
\begin{columns}[T]
  \begin{column}{.02\paperwidth}\end{column}
  \begin{column}{.23\paperwidth}%
    \vspace{8ex}
    \begin{beamercolorbox}[rounded=true]{block body}
      \centering
      \vspace{2ex} % keep the following blank line

      \includegraphics[width=.21\paperwidth]{banner-cecp-en}
      \vspace{2ex}
    \end{beamercolorbox}
  \end{column}
  \begin{column}{.58\paperwidth}
    \raggedleft
    \usebeamerfont{headline}
    \vspace{4ex} % keep the following blank line
    
    {\usebeamercolor{title in headline}\usebeamerfont{title in headline}%
      \inserttitle\\[1ex]}
    {\usebeamercolor{author in headline} \insertauthor\\[1ex]}
    {\usebeamercolor{institute in headline} \insertinstitute\\[1ex]}
  \end{column}
  \begin{column}{.02\paperwidth}\end{column}
  \begin{column}{.13\paperwidth}
    \vspace{5ex} % keep the following blank line
    
    \includegraphics[height=.05\paperwidth]{logo-thu-white}
    \hspace{6ex}
    \includegraphics[width=.05\paperwidth]{logo-mit-graywhite}
  \end{column}
  \begin{column}{.02\paperwidth}\end{column}
\end{columns}
\end{beamercolorbox}

\begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
\rule{0pt}{1ex}
\end{beamercolorbox}
}


\setbeamertemplate{footline}{
\begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
\rule{0pt}{0.5ex}
\end{beamercolorbox}

\begin{beamercolorbox}[ht=4ex,leftskip=1cm,rightskip=1cm]{footline}%
