\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor*{alerted text}{fg=red}
\setbeamercolor*{example text}{fg=black}
\setbeamercolor*{structure}{fg=blue058, bg=white}

\setbeamercolor*{palette primary}{fg=white,bg=blue058}
\setbeamercolor*{palette secondary}{fg=white,bg=blue069}

\setbeamercolor{section in head/foot}{parent=palette primary}
%\setbeamertemplate{section in head/foot shaded}{\usebeamercolor[fg]{blue069}}
